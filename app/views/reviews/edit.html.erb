<h1>Edit your review!</h1>

<%= form_for [@review.golfcourse, @review] do |f| %>
 
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, size: "50x10" %>
  </div>

  <div class="rating">
    <%= f.label :star_rating %><br>
    <%= f.text_field :star_rating %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<button type="button" class="btn btn-default btn-xs">
<%= link_to "Back to the list!", golfcourses_path %></button>